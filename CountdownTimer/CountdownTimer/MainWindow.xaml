<Window x:Class="CountdownTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CountdownTimer"
        mc:Ignorable="d"
        xmlns:fr="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
        Title="CountdownTimer" Height="350" Width="640">
    <Window.Resources>
        
    </Window.Resources>
    <Grid Background="#290149">

        <fr:Frame x:Name="frame" HorizontalAlignment="Center" Width="570" Height="250" Margin="0,30,0,0" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="2" Background="#caf7e3" />
        <ToggleButton Content="StopWatch" x:Name="StopWatchButton" Click="Stopwatch" FontSize="25" FontFamily="Century" FontWeight="Bold" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,30,0,0" Background="#caf7e3" Style="{DynamicResource ToggleButtonStyle1}"/>
        <ToggleButton Content="Timer" x:Name="TimerButton" Click="Timer" FontSize="25" FontFamily="Century" FontWeight="Bold" Width="150" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="160,30,0,0" Background="Bisque" Style="{DynamicResource ToggleButtonStyle1}"/>
    </Grid>
</Window>
